{
  "name": "slackfeedbot",
  "version": "1.2.5",
  "description": "Push RSS feed updates to Slack via GitHub Actions",
  "repository": {
    "type": "git",
    "url": "https://github.com/selfagency/slackfeedbot.git"
  },
  "license": "MIT",
  "author": "Daniel Sieradski <daniel@self.agency>",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project .",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "watch": "parcel watch"
  },
  "lint-staged": {
    "*.{js,json,md,yml}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "dayjs": "^1.11.0",
    "html-to-text": "^8.1.0",
    "linkedom": "^0.14.4",
    "node-fetch": "^3.2.3",
    "object-sha": "^2.0.6",
    "rss-to-json": "^2.0.2",
    "showdown": "^2.0.3"
  },
  "devDependencies": {
    "@types/html-to-text": "^8.1.0",
    "@types/node": "^17.0.21",
    "@types/showdown": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-yml": "^0.14.0",
    "eslint-scope": "^7.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.6",
    "parcel": "^2.3.2",
    "prettier": "^2.6.0",
    "typescript": "^4.6.2"
  },
  "targets": {
    "main": {
      "context": "node",
      "includeNodeModules": true,
      "engines": {
        "node": "16.x.x"
      },
      "isLibrary": true,
      "optimize": true,
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      },
      "source": "action.js"
    }
  }
}
